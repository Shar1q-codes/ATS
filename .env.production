# Production Environment Variables
# WARNING: This file contains sensitive information. Never commit to version control.
# Use a secure secrets management system in production.

# Database Configuration - Primary
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
DATABASE_READ_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@postgres-replica:5432/${DB_NAME}
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=ai_ats_user
DB_PASSWORD=${DB_PASSWORD_SECRET}
DB_NAME=ai_native_ats_prod

# Supabase Configuration (if using Supabase instead of self-hosted)
SUPABASE_URL=${SUPABASE_URL_SECRET}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY_SECRET}

# JWT Configuration
JWT_SECRET=${JWT_SECRET_KEY}
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_SECRET}

# Email Configuration
POSTMARK_API_KEY=${POSTMARK_API_KEY_SECRET}
SENDGRID_API_KEY=${SENDGRID_API_KEY_SECRET}

# Redis Configuration
REDIS_URL=redis://redis-master:6379
REDIS_REPLICA_URL=redis://redis-replica:6379

# Application Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,doc,jpg,jpeg,png

# Monitoring and Logging
SENTRY_DSN=${SENTRY_DSN_SECRET}
LOG_LEVEL=warn

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL_SECRET}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY_SECRET}
NEXT_PUBLIC_NODE_ENV=production

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD_SECRET}

# Backup Configuration
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET_NAME}
BACKUP_S3_ACCESS_KEY=${BACKUP_S3_ACCESS_KEY_SECRET}
BACKUP_S3_SECRET_KEY=${BACKUP_S3_SECRET_KEY_SECRET}
BACKUP_S3_REGION=${BACKUP_S3_REGION}

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
CDN_ACCESS_KEY=${CDN_ACCESS_KEY_SECRET}
CDN_SECRET_KEY=${CDN_SECRET_KEY_SECRET}

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://api.openai.com https://*.supabase.co"